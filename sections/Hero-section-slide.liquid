<div style="background-color:{{ background_color }};" class="section-{{ section.id }} ab-banner-{{ section.id }}">
  <div class="section-{{ section.id }}-padding">
    {% for block in section.blocks %}
      <div
        class="
          ab-banner-image-wrapper
          {% if forloop.first %}
            ab-banner-image-wrapper--active
          {% endif %}
        "
        data-ab-banner-image="{{ forloop.index0 }}"
      >
        {% assign image = block.settings.image %}
        {% if image == blank %}
          {{ 'image' | placeholder_svg_tag: 'ab-banner-image' }}
        {% else %}
          <img alt="{{ image.alt }}" class="ab-banner-image {% if block.settings.image_mobile != blank %} ab-banner-image--desktop {% endif %} hs-lazyload hs-id-1c0267cb" loading="lazy" src="{{ image | img_url: '500x' }}" srcset="
              {{ image | img_url: '500x' }} 500w,
              {{ image | img_url: '800x' }} 800w,
              {{ image | img_url: '1200x' }} 1200w,
              {{ image | img_url: '1600x' }} 1600w,
              {{ image | img_url: '2000x' }} 2000w,
              {{ image | img_url: 'master' }} 2400w
            "/>
          {% if section.settings.lazy_load %} loading="lazy" {% endif %}
        {% endif %}

        {% if block.settings.image_mobile != blank %}
          {% assign image = block.settings.image_mobile %}
          <img
            class="ab-banner-image ab-banner-image--mobile"
            src="{{ image | img_url: '500x' }}"
            srcset="
              {{ image | img_url: '500x' }} 500w,
              {{ image | img_url: '800x' }} 800w,
              {{ image | img_url: '1200x' }} 1200w,
              {{ image | img_url: '1600x' }} 1600w,
              {{ image | img_url: '2000x' }} 2000w,
              {{ image | img_url: 'master' }} 2400w
            "
            alt="{{ image.alt }}"
            loading="eager"
            
          >
        {% endif %}
      </div>
    {% endfor %}
    <div class="ab-banner-content-{{ section.id }}" >
      {% if title != blank %}
        <div class="ab-banner-title-{{ section.id }}">
          {{ title }}
        </div>
      {% endif %}
      {% if subtitle != blank %}
        <div class="ab-banner-subtitle-{{ section.id }}">
          {{ subtitle }}
        </div>
      {% endif %}
      <div class="ab-banner-button-wrapper-{{ section.id }}">
        {% if button != blank %}
          <a
            href="{{ button_url }}"
            class="ab-banner-button-{{ section.id }}"
          >
            {{ button }}
          </a>
        {% endif %}
        {% if second_button != blank %}
          <a
            href="{{ second_button_url }}"
            class="ab-banner-button-second-{{ section.id }}"
          >
            {{ second_button }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    function setActiveBannerImage(index) {
      var banner = document.querySelector('.ab-banner-{{ section.id }}');
      var images = banner.querySelectorAll('.ab-banner-image-wrapper');
      var activeImage = banner.querySelector(
        '.ab-banner-image-wrapper--active'
      );
      var activeIndex = Array.prototype.indexOf.call(images, activeImage);
      var newActiveImage = images[index];

      if (activeIndex === index) {
        return;
      }

      activeImage.classList.remove('ab-banner-image-wrapper--active');
      newActiveImage.classList.add('ab-banner-image-wrapper--active');
    }

    var index = 0;
    var interval;
    function Init() {
      // for every 5s, switch to next image:
      var size = {{ section.blocks.size }};
      if(size <= 1) return;
      interval = setInterval(function () {
        index = (index + 1) % size;
        setActiveBannerImage(index);
      }, {{ section.settings.interval }}000);

      document.addEventListener('shopify:section:unload', function (event) {
        clearInterval(interval);
      });
    }

    document.addEventListener('DOMContentLoaded', function () {
      Init();
    });

  })();
</script>

