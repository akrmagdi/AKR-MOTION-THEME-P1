{% comment %}
Section: Info + Slideshow with custom fonts & rich-text
{% endcomment %}

<!-- 1. Font picks -->
{%- if section.settings.heading_font != blank -%}
  <link
    href="https://fonts.googleapis.com/css2?family={{ section.settings.heading_font }}:wght@400;700&display=swap"
    rel="stylesheet"
  >
{%- endif -%}
{%- if section.settings.body_font != blank -%}
  <link
    href="https://fonts.googleapis.com/css2?family={{ section.settings.body_font }}:wght@400;700&display=swap"
    rel="stylesheet"
  >
{%- endif -%}

<style>
  /* target all headings and .prose paragraphs */
  .heading,
  h1, h2, h3, h4, h5, h6 {
    font-family: '{{ section.settings.heading_font }}', sans-serif;
  }

  .prose p {
    font-family: '{{ section.settings.body_font }}', serif;
  }
</style>

<!-- … rest of your AOS/Swiper includes … -->

<section id="shopify-section-{{ section.id }}" class="py-12">
  <!-- … container / swiper markup … -->
  {% for block in section.blocks %}
    <div class="swiper-slide flex lg:flex-row items-center">
      <!-- INFO -->
      <div data-aos="fade-right" class="prose w-full lg:w-1/2 p-6">
        <!-- now richtext for heading -->
        <div class="heading">
          {{ block.settings.heading | richtext }}
        </div>

        <!-- and richtext for description -->
        <div>
          {{ block.settings.description | richtext }}
        </div>

        <!-- buttons… -->
      </div>

      <!-- IMAGE… -->
    </div>
  {% endfor %}
  <!-- pagination… -->
</section>

{% schema %}
{
  "name": "Info + Slideshow",
  "settings": [
    {
      "type": "text",
      "id": "heading_font",
      "label": "Heading font (Google font name)",
      "default": "Roboto"
    },
    {
      "type": "text",
      "id": "body_font",
      "label": "Body font (Google font name)",
      "default": "Merriweather"
    },
    /* … rest of your existing settings … */
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "richtext",
          "id": "heading",
          "label": "Slide heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Slide description"
        },
        /* … button & image settings … */
      ]
    }
  ]
}
{% endschema %}
