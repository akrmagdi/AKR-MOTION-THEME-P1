{% doc %}
  @prompt
    Restructure and improve the layout of a "Welcome to the lab" section with better visual hierarchy, spacing, and content organization for a more engaging presentation

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .welcome-lab-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
  }

  .welcome-lab__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 30px;
  }

  .welcome-lab__content-{{ ai_gen_id }} {
    grid-column: 1 / 7;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .welcome-lab__image-{{ ai_gen_id }} {
    grid-column: 7 / 13;
    position: relative;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.enable_shadow | default: false | ternary: '0 20px 30px rgba(0,0,0,0.1)', 'none' }};
  }

  .welcome-lab__image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .welcome-lab__placeholder-{{ ai_gen_id }} {
    width: 100%;
    padding-bottom: 75%;
    position: relative;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .welcome-lab__placeholder-{{ ai_gen_id }} svg {
    position: absolute;
    width: 80%;
    height: 80%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .welcome-lab__eyebrow-{{ ai_gen_id }} {
    font-size: {{ block.settings.eyebrow_size }}px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 16px;
    color: {{ block.settings.accent_color }};
    font-weight: 600;
  }

  .welcome-lab__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    margin-bottom: 24px;
    font-weight: 700;
  }

  .welcome-lab__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin-bottom: 32px;
  }

  .welcome-lab__features-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 32px;
  }

  .welcome-lab__feature-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .welcome-lab__feature-icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    color: {{ block.settings.accent_color }};
  }

  .welcome-lab__feature-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_text_size }}px;
    line-height: 1.4;
  }

  .welcome-lab__cta-{{ ai_gen_id }} {
    display: inline-flex;
    padding: 14px 28px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: 16px;
    transition: background-color 0.3s;align-self: flex-start;
  }

  .welcome-lab__cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 990px) {
    .welcome-lab__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .welcome-lab__content-{{ ai_gen_id }},
    .welcome-lab__image-{{ ai_gen_id }} {
      grid-column: 1 / -1;
    }

    .welcome-lab__image-{{ ai_gen_id }} {
      order: -1;
    }
  }

  @media screen and (max-width: 767px) {
    .welcome-lab__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .welcome-lab__features-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="welcome-lab-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="welcome-lab__container-{{ ai_gen_id }}">
    <div class="welcome-lab__content-{{ ai_gen_id }}">
      {% if block.settings.eyebrow != blank %}
        <div class="welcome-lab__eyebrow-{{ ai_gen_id }}">{{ block.settings.eyebrow }}</div>
      {% endif %}
      
      {% if block.settings.heading != blank %}
        <h2 class="welcome-lab__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      
      {% if block.settings.description != blank %}
        <div class="welcome-lab__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
      
      <div class="welcome-lab__features-{{ ai_gen_id }}">
        {% if block.settings.feature_1_text != blank %}
          <div class="welcome-lab__feature-{{ ai_gen_id }}">
            <div class="welcome-lab__feature-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
            <div class="welcome-lab__feature-text-{{ ai_gen_id }}">{{ block.settings.feature_1_text }}</div>
          </div>
        {% endif %}
        
        {% if block.settings.feature_2_text != blank %}
          <div class="welcome-lab__feature-{{ ai_gen_id }}">
            <div class="welcome-lab__feature-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
            <div class="welcome-lab__feature-text-{{ ai_gen_id }}">{{ block.settings.feature_2_text }}</div>
          </div>
        {% endif %}
        
        {% if block.settings.feature_3_text != blank %}
          <div class="welcome-lab__feature-{{ ai_gen_id }}">
            <div class="welcome-lab__feature-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
            <div class="welcome-lab__feature-text-{{ ai_gen_id }}">{{ block.settings.feature_3_text }}</div>
          </div>
        {% endif %}
      </div>
      
      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="welcome-lab__cta-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div><div class="welcome-lab__image-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img 
          src="{{ block.settings.image | image_url: width: 800 }}" 
          alt="{{ block.settings.image.alt | escape }}"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          loading="lazy"
        >
      {% else %}
        <div class="welcome-lab__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

